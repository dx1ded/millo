include @cmps/Select/select
include @cmps/Rating/rating
include @cmps/Beans/beans
include @cmps/Char/char

mixin product-popular-new
  .product&attributes(attributes)
    .product__header
      .product__types
        span.text.text--usmall Популярное
        span.text.text--usmall Новый урожай
      +select(0, ["250 г.", "500 г.", "750 г.", "1 кг."])
    .product__content
      .product__image
        +image("product-coffee.jpg", "Пакет кофе, на котором логотип с надписью Ethiopia Yirgachefee и картинка с козлом на фоне гор")
      .product__options
        +rating
        +beans
        .product-chars
          +char("Кислинка")
          +char("Горчинка")
          +char("Насыщенность")
    .product__info
      h4.text.product__name Colombia Supremo
      p.text.text--usmall.product__description Свежеобжаренный кофе - описание товара, вкус, аромат
      .product__wrapper
        .product-price
          ins.product-price__current 250 &#8381;
        button.btn.btn-reset.btn--primary.product__cta В корзину

mixin product-with-sales
  .product.product--sale&attributes(attributes)
    .product__header
      span.text.text--usmall.sales-sign Скидки
      +select(0, ["250 г.", "500 г.", "750 г.", "1 кг."])
    .product__content
      .product__image
        +image("product-coffee.jpg", "Пакет кофе, на котором логотип с надписью Ethiopia Yirgachefee и картинка с козлом на фоне гор")
      .product__options
        +rating
        +beans
        .product-chars
          +char("Кислинка")
          +char("Горчинка")
          +char("Насыщенность")
    .product__info
      h4.text.product__name Colombia Supremo
      p.text.text--usmall.product__description Свежеобжаренный кофе - описание товара, вкус, аромат
      .product__wrapper
        .product-price
          del.text.product-price__old 350 &#8381;
          ins.product-price__current 250 &#8381;
        button.btn.btn-reset.btn--primary.product__cta В корзину

mixin product-without-options(image)
  .product.product--wide&attributes(attributes)
    .product__header
      +rating
      +select(0, ["100 г.", "500 г."])
    .product__content
      .product__image
        +image(image.url, image.alt)
    .product__info
      h4.text.product__name Наименование товара
      p.text.text--usmall.product__description Описание товара
      .product__wrapper
        .product-price
          ins.product-price__current 250 &#8381;
        button.btn.btn-reset.btn--primary.product__cta В корзину
